<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ReadFragment">

    <TextView
        android:id="@+id/tittleWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_mad_lib_story"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storyTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="30dp"
        android:scrollbars="vertical"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/makeAnotherButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tittleWords" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/makeAnotherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_another_story"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storyTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>